# Uncomment this line to define a global platform for your project
platform :ios, '15.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
  target 'RunnerTests' do
    inherit! :search_paths
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    
    # Remove PrivacyInfo.xcprivacy from source compilation
    # These files should be treated as resources, not source files
    # Only process native targets (not aggregate targets like Firebase)
    if target.is_a?(Xcodeproj::Project::Object::PBXNativeTarget)
      target.source_build_phase.files.each do |file|
        if file.file_ref && file.file_ref.path && file.file_ref.path.end_with?('PrivacyInfo.xcprivacy')
          target.source_build_phase.remove_file_reference(file.file_ref)
        end
      end
    end
    
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.0'
      
      # Fix framework search paths for GoogleSignIn and other frameworks
      config.build_settings['FRAMEWORK_SEARCH_PATHS'] ||= ['$(inherited)']
      config.build_settings['FRAMEWORK_SEARCH_PATHS'] << '$(PODS_ROOT)/GoogleSignIn'
      config.build_settings['FRAMEWORK_SEARCH_PATHS'] << '$(PODS_CONFIGURATION_BUILD_DIR)/GoogleSignIn'
      
      # Ensure headers can be found
      config.build_settings['HEADER_SEARCH_PATHS'] ||= ['$(inherited)']
      config.build_settings['HEADER_SEARCH_PATHS'] << '$(PODS_ROOT)/GoogleSignIn/GoogleSignIn'
      
      # Fix prefix header paths - ensure they're properly resolved
      if config.build_settings['GCC_PREFIX_HEADER']
        prefix_header = config.build_settings['GCC_PREFIX_HEADER']
        if prefix_header.is_a?(String) && prefix_header.start_with?('Target Support Files/')
          # Convert relative path to use SRCROOT (which points to Pods directory in Pods project)
          config.build_settings['GCC_PREFIX_HEADER'] = "$(SRCROOT)/#{prefix_header}"
        elsif prefix_header.is_a?(String) && prefix_header.include?('$(PODS_ROOT)/Target Support Files/')
          # If already using PODS_ROOT, convert to SRCROOT for Pods project context
          config.build_settings['GCC_PREFIX_HEADER'] = prefix_header.gsub('$(PODS_ROOT)', '$(SRCROOT)')
        end
      end
      
      # Enable module map generation
      config.build_settings['DEFINES_MODULE'] = 'YES'
      config.build_settings['BUILD_LIBRARY_FOR_DISTRIBUTION'] = 'YES'
      
      # Enable modules for proper @import support
      config.build_settings['CLANG_ENABLE_MODULES'] = 'YES'
      config.build_settings['CLANG_ALLOW_NON_MODULAR_INCLUDES_IN_FRAMEWORK_MODULES'] = 'YES'
      
      # Ensure framework search paths include Pods build directory
      config.build_settings['FRAMEWORK_SEARCH_PATHS'] ||= ['$(inherited)']
      config.build_settings['FRAMEWORK_SEARCH_PATHS'] << '$(PODS_CONFIGURATION_BUILD_DIR)'
      config.build_settings['FRAMEWORK_SEARCH_PATHS'] << '$(BUILT_PRODUCTS_DIR)'
      
      # Fix nanopb duplicate symbols issue
      # Ensure -ObjC is present for proper static library linking
      config.build_settings['OTHER_LDFLAGS'] ||= ['$(inherited)']
      if config.build_settings['OTHER_LDFLAGS'].is_a?(Array)
        config.build_settings['OTHER_LDFLAGS'] << '-ObjC' unless config.build_settings['OTHER_LDFLAGS'].include?('-ObjC')
      end
      
      # For nanopb specifically, ensure it's only linked once
      # This prevents duplicate symbol errors when multiple Firebase pods include nanopb
      if target.name == 'nanopb'
        config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] ||= ['$(inherited)']
        config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] << 'PB_FIELD_32BIT=1'
        config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] << 'PB_NO_PACKED_STRUCTS=1'
      end
      
      # Additional fix: Remove duplicate symbols during linking for Runner target
      if target.name == 'Runner'
        config.build_settings['OTHER_LDFLAGS'] ||= ['$(inherited)']
        if config.build_settings['OTHER_LDFLAGS'].is_a?(Array)
          # Add flag to suppress duplicate symbol warnings (they're handled by CocoaPods)
          config.build_settings['OTHER_LDFLAGS'] << '-Wl,-no_warn_duplicate_libraries' unless config.build_settings['OTHER_LDFLAGS'].any? { |flag| flag.to_s.include?('no_warn_duplicate_libraries') }
        end
      end
      
      # Fix GTMAppAuth module import issue for GoogleSignIn
      # GTMAppAuth 4.x is Swift-based but exposes Objective-C interfaces via @objc
      if target.name == 'GoogleSignIn'
        config.build_settings['CLANG_ALLOW_NON_MODULAR_INCLUDES_IN_FRAMEWORK_MODULES'] = 'YES'
        config.build_settings['CLANG_ENABLE_MODULES'] = 'YES'
        # Ensure GTMAppAuth module can be found
        config.build_settings['HEADER_SEARCH_PATHS'] ||= ['$(inherited)']
        config.build_settings['HEADER_SEARCH_PATHS'] << '$(PODS_ROOT)/GTMAppAuth'
        config.build_settings['HEADER_SEARCH_PATHS'] << '$(PODS_ROOT)/GTMAppAuth/GTMAppAuth'
        # Enable Swift-Objective-C interop
        config.build_settings['SWIFT_OBJC_INTEROP_MODE'] = 'objc'
      end
    end
  end
  
  # Patch GIDSignIn.m to ensure GTMAppAuth Swift-generated Objective-C header is imported
  # This makes @objc classes accessible to Objective-C code
  installer.pods_project.targets.each do |target|
    if target.name == 'GoogleSignIn'
      # Try multiple possible paths for the file
      possible_paths = [
        File.join(installer.sandbox.root, 'GoogleSignIn', 'GoogleSignIn', 'Sources', 'GIDSignIn.m'),
        File.join(installer.sandbox.root, 'GoogleSignIn', 'GoogleSignIn', 'GIDSignIn.m'),
        File.join(Dir.pwd, 'Pods', 'GoogleSignIn', 'GoogleSignIn', 'Sources', 'GIDSignIn.m')
      ]
      
      gid_signin_m_path = possible_paths.find { |path| File.exist?(path) }
      
      if gid_signin_m_path && File.readable?(gid_signin_m_path) && File.writable?(gid_signin_m_path)
        begin
          text = File.read(gid_signin_m_path)
          # Add explicit import for Swift-generated Objective-C header
          if text.include?('@import GTMAppAuth;') && !text.include?('GTMAppAuth-Swift.h')
            text.gsub!(/@import GTMAppAuth;/, "@import GTMAppAuth;\n#if __has_include(<GTMAppAuth/GTMAppAuth-Swift.h>)\n#import <GTMAppAuth/GTMAppAuth-Swift.h>\n#endif")
            File.write(gid_signin_m_path, text)
          end
        rescue => e
          puts "Warning: Could not patch GIDSignIn.m: #{e.message}"
        end
      end
    end
  end
end
